{
  "$id": "https://schemas.ory.sh/kratos/selfservice/strategy/passkey/login.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "csrf_token": {
      "type": "string"
    },
    "passkey_login": {
      "type": "string"
    },
    "method": {
      "type": "string"
    },
    "identifier": {
      "type": "string",
      "minLength": 1
    }
  },
  "if": {
    "anyOf": [
      {
        "properties": {
          "method": {
            "const": "webauthn"
          }
        },
        "required": [
          "method"
        ]
      },
      {
        "properties": {
          "passkey_login": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "passkey_login"
        ]
      }
    ]
  },
  "then": {
    "required": [
      "identifier"
    ]
  }
}
